            <table class="body-item-2">
                <tr class="body-item">
                    <td class="body-item">
                        <div id="world-map" style="width: 732px; height: 400px"></div>
                        <script>
                          // Parameters
                          const backgroundColor = '#08101c';
                          const borderColor = '#4772b8';

                          $(function(){
                            $('#world-map').vectorMap(
                              {
                                map: 'world_mill',
                                backgroundColor: backgroundColor,
                                hoverColor: false,
                                hoverOpacity: 0.7,
                                regionStyle : {
                                  initial : {
                                    fill : backgroundColor,
                                    "fill-opacity" : 1,
                                    stroke : borderColor,
                                    "stroke-width" : 0.7,
                                    "stroke-opacity" : 1
                                  }
                                },
                                series: {
                                  regions: [{
                                    scale: ['#C8EEFF', '#0071A4'],
                                    normalizeFunction: 'polynomial'
                                  }]
                                }
                              }
                            );
                          });
                        </script>
                    </td>
                </tr>
            </table>






